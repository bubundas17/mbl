<% include ../../inc/usercpHead %>
<% include ../../inc/usercpsider.ejs %>

<div class="list-group">
    <div class="list-group-item active">
        <h5>Withdrawal Via Mobile Recharge</h5>
    </div>
    <div class="list-group-item">
        <p>Here you can Withdrawl your credits with paytm..</p>
        <p class="info"><strong>Note: Please fill the withdrawal form carefully, it can't be undone
                later!</strong></p>
    </div>
    <div id="form">
        <form action="/clientarea/withdrawal/recharge" method="post" class="form-group">
            <div class="list-group-item">
                <small>Paytm Number:</small>
                <input type="number" placeholder="Mobile Number" class="form-control" name="number"
                       required>
            </div>
            <div class="list-group-item">
                <small>Amount: (Min RS. 10)</small>
                <input type="number" placeholder="Recharge Amount" class="form-control" v-model="amount"
                       name="amount">
            </div>
            <div class="list-group-item">
                <small>Message:</small>
                <textarea name="message" id="" cols="30" rows="10" class="form-control"></textarea>
            </div>
            <div class="list-group-item">
                <input type="submit" class="btn btn-success" value="Recharge!" id="rech">
            </div>
        </form>
    </div>
</div>
<% include ../../inc/footer %>
